#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

#define MAX_STUDENTS 100
#define MAX_NAME_LENGTH 50
#define MAX_COURSE_LENGTH 30
#define FILENAME "students.dat"

// Structure to store student information
typedef struct {
    int id;
    char name[MAX_NAME_LENGTH];
    int age;
    char course[MAX_COURSE_LENGTH];
    float marks;
    char grade;
} Student;

Student students[MAX_STUDENTS];
int studentCount = 0;

// Function prototypes
void displayMenu();
void addStudent();
void displayAllStudents();
void searchStudent();
void updateStudent();
void deleteStudent();
void saveToFile();
void loadFromFile();
void calculateGrade(Student *s);
void sortStudents();
void displayStatistics();
void clearInputBuffer();

int main() {
    loadFromFile();
    
    int choice;
    
    do {
        displayMenu();
        printf("Enter your choice: ");
        scanf("%d", &choice);
        clearInputBuffer();
        
        switch(choice) {
            case 1:
                addStudent();
                break;
            case 2:
                displayAllStudents();
                break;
            case 3:
                searchStudent();
                break;
            case 4:
                updateStudent();
                break;
            case 5:
                deleteStudent();
                break;
            case 6:
                sortStudents();
                break;
            case 7:
                displayStatistics();
                break;
            case 8:
                saveToFile();
                printf("Data saved successfully. Exiting...\n");
                break;
            default:
                printf("Invalid choice! Please try again.\n");
        }
    } while(choice != 8);
    
    return 0;
}

void displayMenu() {
    printf("\n======= STUDENT MANAGEMENT SYSTEM =======\n");
    printf("1. Add Student\n");
    printf("2. Display All Students\n");
    printf("3. Search Student\n");
    printf("4. Update Student Record\n");
    printf("5. Delete Student Record\n");
    printf("6. Sort Students\n");
    printf("7. Display Statistics\n");
    printf("8. Save and Exit\n");
    printf("========================================\n");
}

void addStudent() {
    if(studentCount >= MAX_STUDENTS) {
        printf("Database is full! Cannot add more students.\n");
        return;
    }
    
    Student newStudent;
    
    printf("\n--- Add New Student ---\n");
    
    // Get student ID
    printf("Enter Student ID: ");
    scanf("%d", &newStudent.id);
    clearInputBuffer();
    
    // Check if ID already exists
    for(int i = 0; i < studentCount; i++) {
        if(students[i].id == newStudent.id) {
            printf("Student ID already exists!\n");
            return;
        }
    }
    
    // Get student name
    printf("Enter Student Name: ");
    fgets(newStudent.name, MAX_NAME_LENGTH, stdin);
    newStudent.name[strcspn(newStudent.name, "\n")] = 0;
    
    // Get age
    printf("Enter Age: ");
    scanf("%d", &newStudent.age);
    clearInputBuffer();
    
    // Get course
    printf("Enter Course: ");
    fgets(newStudent.course, MAX_COURSE_LENGTH, stdin);
    newStudent.course[strcspn(newStudent.course, "\n")] = 0;
    
    // Get marks
    printf("Enter Marks (0-100): ");
    scanf("%f", &newStudent.marks);
    clearInputBuffer();
    
    // Validate marks
    if(newStudent.marks < 0 || newStudent.marks > 100) {
        printf("Invalid marks! Please enter between 0-100.\n");
        return;
    }
    
    // Calculate grade
    calculateGrade(&newStudent);
    
    // Add to array
    students[studentCount] = newStudent;
    studentCount++;
    
    printf("Student added successfully!\n");
    saveToFile();
}

void displayAllStudents() {
    if(studentCount == 0) {
        printf("No student records found!\n");
        return;
    }
    
    printf("\n--- All Student Records ---\n");
    printf("===================================================================================\n");
    printf("%-10s %-20s %-5s %-20s %-10s %-5s\n", 
           "ID", "Name", "Age", "Course", "Marks", "Grade");
    printf("===================================================================================\n");
    
    for(int i = 0; i < studentCount; i++) {
        printf("%-10d %-20s %-5d %-20s %-10.2f %-5c\n",
               students[i].id,
               students[i].name,
               students[i].age,
               students[i].course,
               students[i].marks,
               students[i].grade);
    }
    printf("===================================================================================\n");
    printf("Total Students: %d\n", studentCount);
}

void searchStudent() {
    if(studentCount == 0) {
        printf("No student records found!\n");
        return;
    }
    
    int choice;
    printf("\n--- Search Student ---\n");
    printf("1. Search by ID\n");
    printf("2. Search by Name\n");
    printf("Enter choice: ");
    scanf("%d", &choice);
    clearInputBuffer();
    
    if(choice == 1) {
        int id;
        printf("Enter Student ID: ");
        scanf("%d", &id);
        clearInputBuffer();
        
        for(int i = 0; i < studentCount; i++) {
            if(students[i].id == id) {
                printf("\nStudent Found:\n");
                printf("ID: %d\n", students[i].id);
                printf("Name: %s\n", students[i].name);
                printf("Age: %d\n", students[i].age);
                printf("Course: %s\n", students[i].course);
                printf("Marks: %.2f\n", students[i].marks);
                printf("Grade: %c\n", students[i].grade);
                return;
            }
        }
        printf("Student with ID %d not found!\n", id);
    }
    else if(choice == 2) {
        char name[MAX_NAME_LENGTH];
        printf("Enter Student Name: ");
        fgets(name, MAX_NAME_LENGTH, stdin);
        name[strcspn(name, "\n")] = 0;
        
        int found = 0;
        printf("\nSearch Results:\n");
        printf("===================================================================================\n");
        printf("%-10s %-20s %-5s %-20s %-10s %-5s\n", 
               "ID", "Name", "Age", "Course", "Marks", "Grade");
        printf("===================================================================================\n");
        
        for(int i = 0; i < studentCount; i++) {
            if(strstr(students[i].name, name) != NULL) {
                printf("%-10d %-20s %-5d %-20s %-10.2f %-5c\n",
                       students[i].id,
                       students[i].name,
                       students[i].age,
                       students[i].course,
                       students[i].marks,
                       students[i].grade);
                found = 1;
            }
        }
        
        if(!found) {
            printf("No students found with name containing '%s'\n", name);
        }
        printf("===================================================================================\n");
    }
    else {
        printf("Invalid choice!\n");
    }
}

void updateStudent() {
    if(studentCount == 0) {
        printf("No student records found!\n");
        return;
    }
    
    int id;
    printf("\n--- Update Student Record ---\n");
    printf("Enter Student ID to update: ");
    scanf("%d", &id);
    clearInputBuffer();
    
    for(int i = 0; i < studentCount; i++) {
        if(students[i].id == id) {
            printf("\nCurrent Details:\n");
            printf("ID: %d\n", students[i].id);
            printf("Name: %s\n", students[i].name);
            printf("Age: %d\n", students[i].age);
            printf("Course: %s\n", students[i].course);
            printf("Marks: %.2f\n", students[i].marks);
            
            printf("\nEnter new details (press Enter to keep current value):\n");
            
            // Update name
            printf("New Name [%s]: ", students[i].name);
            char newName[MAX_NAME_LENGTH];
            fgets(newName, MAX_NAME_LENGTH, stdin);
            newName[strcspn(newName, "\n")] = 0;
            if(strlen(newName) > 0) {
                strcpy(students[i].name, newName);
            }
            
            // Update age
            printf("New Age [%d]: ", students[i].age);
            char ageInput[10];
            fgets(ageInput, 10, stdin);
            ageInput[strcspn(ageInput, "\n")] = 0;
            if(strlen(ageInput) > 0) {
                students[i].age = atoi(ageInput);
            }
            
            // Update course
            printf("New Course [%s]: ", students[i].course);
            char newCourse[MAX_COURSE_LENGTH];
            fgets(newCourse, MAX_COURSE_LENGTH, stdin);
            newCourse[strcspn(newCourse, "\n")] = 0;
            if(strlen(newCourse) > 0) {
                strcpy(students[i].course, newCourse);
            }
            
            // Update marks
            printf("New Marks [%.2f]: ", students[i].marks);
            char marksInput[10];
            fgets(marksInput, 10, stdin);
            marksInput[strcspn(marksInput, "\n")] = 0;
            if(strlen(marksInput) > 0) {
                students[i].marks = atof(marksInput);
                calculateGrade(&students[i]);
            }
            
            printf("Student record updated successfully!\n");
            saveToFile();
            return;
        }
    }
    
    printf("Student with ID %d not found!\n", id);
}

void deleteStudent() {
    if(studentCount == 0) {
        printf("No student records found!\n");
        return;
    }
    
    int id;
    printf("\n--- Delete Student Record ---\n");
    printf("Enter Student ID to delete: ");
    scanf("%d", &id);
    clearInputBuffer();
    
    for(int i = 0; i < studentCount; i++) {
        if(students[i].id == id) {
            char confirm;
            printf("Are you sure you want to delete student %s (ID: %d)? (y/n): ", 
                   students[i].name, students[i].id);
            scanf("%c", &confirm);
            clearInputBuffer();
            
            if(confirm == 'y' || confirm == 'Y') {
                // Shift all elements after i one position left
                for(int j = i; j < studentCount - 1; j++) {
                    students[j] = students[j + 1];
                }
                studentCount--;
                printf("Student record deleted successfully!\n");
                saveToFile();
            } else {
                printf("Deletion cancelled.\n");
            }
            return;
        }
    }
    
    printf("Student with ID %d not found!\n", id);
}

void calculateGrade(Student *s) {
    if(s->marks >= 90) s->grade = 'A';
    else if(s->marks >= 80) s->grade = 'B';
    else if(s->marks >= 70) s->grade = 'C';
    else if(s->marks >= 60) s->grade = 'D';
    else if(s->marks >= 50) s->grade = 'E';
    else s->grade = 'F';
}

void sortStudents() {
    if(studentCount == 0) {
        printf("No student records found!\n");
        return;
    }
    
    int choice;
    printf("\n--- Sort Students ---\n");
    printf("1. Sort by ID\n");
    printf("2. Sort by Name\n");
    printf("3. Sort by Marks\n");
    printf("Enter choice: ");
    scanf("%d", &choice);
    clearInputBuffer();
    
    // Bubble sort implementation
    for(int i = 0; i < studentCount - 1; i++) {
        for(int j = 0; j < studentCount - i - 1; j++) {
            int swap = 0;
            
            switch(choice) {
                case 1: // Sort by ID
                    if(students[j].id > students[j + 1].id) swap = 1;
                    break;
                case 2: // Sort by Name
                    if(strcmp(students[j].name, students[j + 1].name) > 0) swap = 1;
                    break;
                case 3: // Sort by Marks
                    if(students[j].marks < students[j + 1].marks) swap = 1;
                    break;
                default:
                    printf("Invalid choice!\n");
                    return;
            }
            
            if(swap) {
                Student temp = students[j];
                students[j] = students[j + 1];
                students[j + 1] = temp;
            }
        }
    }
    
    printf("Students sorted successfully!\n");
    displayAllStudents();
}

void displayStatistics() {
    if(studentCount == 0) {
        printf("No student records found!\n");
        return;
    }
    
    printf("\n--- Statistics ---\n");
    
    float totalMarks = 0;
    float highestMarks = students[0].marks;
    float lowestMarks = students[0].marks;
    int aCount = 0, bCount = 0, cCount = 0, dCount = 0, eCount = 0, fCount = 0;
    
    for(int i = 0; i < studentCount; i++) {
        totalMarks += students[i].marks;
        
        if(students[i].marks > highestMarks) highestMarks = students[i].marks;
        if(students[i].marks < lowestMarks) lowestMarks = students[i].marks;
        
        switch(students[i].grade) {
            case 'A': aCount++; break;
            case 'B': bCount++; break;
            case 'C': cCount++; break;
            case 'D': dCount++; break;
            case 'E': eCount++; break;
            case 'F': fCount++; break;
        }
    }
    
    float averageMarks = totalMarks / studentCount;
    
    printf("Total Students: %d\n", studentCount);
    printf("Average Marks: %.2f\n", averageMarks);
    printf("Highest Marks: %.2f\n", highestMarks);
    printf("Lowest Marks: %.2f\n", lowestMarks);
    printf("\nGrade Distribution:\n");
    printf("A: %d students\n", aCount);
    printf("B: %d students\n", bCount);
    printf("C: %d students\n", cCount);
    printf("D: %d students\n", dCount);
    printf("E: %d students\n", eCount);
    printf("F: %d students\n", fCount);
    
    // Display students with marks above average
    printf("\nStudents above average marks (%.2f):\n", averageMarks);
    int aboveAvgCount = 0;
    for(int i = 0; i < studentCount; i++) {
        if(students[i].marks > averageMarks) {
            printf("  %s (%.2f)\n", students[i].name, students[i].marks);
            aboveAvgCount++;
        }
    }
    printf("Total: %d students\n", aboveAvgCount);
}

void saveToFile() {
    FILE *file = fopen(FILENAME, "wb");
    if(file == NULL) {
        printf("Error opening file for writing!\n");
        return;
    }
    
    // Save student count
    fwrite(&studentCount, sizeof(int), 1, file);
    
    // Save all student records
    for(int i = 0; i < studentCount; i++) {
        fwrite(&students[i], sizeof(Student), 1, file);
    }
    
    fclose(file);
}

void loadFromFile() {
    FILE *file = fopen(FILENAME, "rb");
    if(file == NULL) {
        printf("No previous data found. Starting fresh.\n");
        return;
    }
    
    // Read student count
    fread(&studentCount, sizeof(int), 1, file);
    
    // Read all student records
    for(int i = 0; i < studentCount; i++) {
        fread(&students[i], sizeof(Student), 1, file);
    }
    
    fclose(file);
    printf("Loaded %d student records from file.\n", studentCount);
}

void clearInputBuffer() {
    int c;
    while ((c = getchar()) != '\n' && c != EOF);
}
